@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.Account.Localization
@using Volo.Abp.Account.Settings
@using Volo.Abp.Settings
@model Volo.Abp.Account.Web.Pages.Account.LoginModel
@inject IHtmlLocalizer<AccountResource> L
@inject Volo.Abp.AspNetCore.Mvc.UI.Layout.IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Login"].Value;
}

<style>
    /* Hide tenant switch more aggressively */
    .tenant-switch-box, 
    #AbpTenantSwitch, 
    .card-header.bg-primary.text-white {
        display: none !important;
    }
    
    /* Hide ABP Navbar/Topbar */
    .lpx-topbar-container,
    .lpx-logo-container,
    .abp-layout-top-bar {
        display: none !important;
    }
</style>

<div class="card mt-3 shadow-sm rounded" style="width: 100%; max-width: 450px; height: 100%;max-height:100 dvh">
    <div class="card-body p-5">
        <h4 class="card-title text-center mb-4">@L["Login"]</h4>
        <form method="post" class="mt-4">
            <div class="mb-3">
                <label asp-for="LoginInput.UserNameOrEmailAddress" class="form-label">@L["UserNameOrEmailAddress"]</label>
                <input asp-for="LoginInput.UserNameOrEmailAddress" class="form-control" />
                <span asp-validation-for="LoginInput.UserNameOrEmailAddress" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LoginInput.Password" class="form-label">@L["Password"]</label>
                <input asp-for="LoginInput.Password" class="form-control" type="password" />
                <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="LoginInput.RememberMe" class="form-check-input" />
                <label asp-for="LoginInput.RememberMe" class="form-check-label">@L["RememberMe"]</label>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">@L["Login"]</button>
            </div>
        </form>
        
        <div class="mt-4 text-center">
            <a href="@Url.Page("./ForgotPassword")">@L["ForgotPassword"]</a>
        </div>
        
        <div class="mt-3 text-center">
            <a href="http://localhost:4200" class="btn btn-outline-secondary btn-sm">
                <i class="fa fa-arrow-left"></i> Back to Home
            </a>
        </div>
    </div>
</div>

<script>
    window.onload = function() {
        var brandLink = document.querySelector('.navbar-brand');
        if (brandLink) {
            brandLink.href = 'http://localhost:4200';
        }
        
        // Also try to find the logo image link if structure is different
        var logoLink = document.querySelector('a[href="/"]');
        if (logoLink) {
            logoLink.href = 'http://localhost:4200';
        }
    };
</script>
